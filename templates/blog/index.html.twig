{% extends 'base.html.twig' %}

{% block title %} Blog Jstore {% endblock %}

{% block body %}

    
    <div class="articles">
        {% for article in articles %}
            
            <div class="article-item">
                <div class="article-image">
                    <img src={{article.imageUrl}} width="300px" height="300px" alt="Image de l'article : {{article.imageUrl}}">
                </div>
                <div class="article-details">
                    <div class="article-author">
                        <div class="article-author-details">
                            <img src={{article.author.profile.picture}} width="300px" height="300px" alt="Image de profile : {{article.author.fullname}}">
                        </div>
                    </div>
                </div>
                <div class="article-content-details">
                    <h2 class="article-title" > {{article.title}} </h2>
                    <div class="article-createdAt"> {{article.createdAt | date("m/d/Y") }} </div>
                </div>
            </div>
        {% endfor %}
    </div>

{% endblock %}
