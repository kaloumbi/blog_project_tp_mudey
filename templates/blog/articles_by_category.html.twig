{% extends 'base.html.twig' %}

{% block title %} Blog Jstore {% endblock %}

{% block body %}
    <div class="articles-infos">
        <strong>{{articles | length}} articles retrouv√©s</strong>
        <p> Article de la Category: <strong> {{category.name}}</strong> </p>
    </div>
    
    <div class="articles">
        {% for article in articles %}
            {# <div>{{ article.imageUrl }}</div> #}
            <a href="/article/{{article.slug}}" class="article-item">
                <div class="article-image">
                    <img src={{article.imageUrl}} alt="Image de l'article : {{article.imageUrl}}">
                </div>
                <div class="article-details flex">
                    <div class="article-author  ">
                        <div class="article-author-picture">
                            <img src={{article.author.profile.picture}} alt="Image de profile : {{article.author.fullname}}">
                        </div>
                    </div>
                    <div class="article-content-details">
                        <h2 class="article-title" > {{article.title}} </h2>
                        <div class="article-createdAt"> {{article.fromNow }} </div>
                    </div>
                </div>
            </a>
        {% endfor %}
    </div>

{% endblock %}
